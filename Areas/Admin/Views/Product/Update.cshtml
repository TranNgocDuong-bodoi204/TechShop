@using Microsoft.EntityFrameworkCore.Metadata.Internal
@model TechnicalShop.Models.ProductModel

@{
    ViewData["Title"] = "Cập nhật sản phẩm";
}

<!-- Added modern breadcrumb navigation -->
<div class="mb-6">
    <nav class="flex" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 md:space-x-3">
            <li class="inline-flex items-center">
                <a asp-action="Index" asp-controller="AdminHome" asp-area="Admin" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-emerald-600">
                    <i class="fas fa-home w-3 h-3 mr-2.5"></i>
                    Trang chủ
                </a>
            </li>
            <li>
                <div class="flex items-center">
                    <i class="fas fa-chevron-right text-gray-400 w-3 h-3 mx-1"></i>
                    <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="ml-1 text-sm font-medium text-gray-700 hover:text-emerald-600 md:ml-2">Sản phẩm</a>
                </div>
            </li>
            <li aria-current="page">
                <div class="flex items-center">
                    <i class="fas fa-chevron-right text-gray-400 w-3 h-3 mx-1"></i>
                    <span class="ml-1 text-sm font-medium text-gray-500 md:ml-2">Cập nhật sản phẩm</span>
                </div>
            </li>
        </ol>
    </nav>
</div>

<!-- Modern card layout with header -->
<div class="bg-white rounded-lg shadow-sm border border-gray-200">
    <div class="px-6 py-4 border-b border-gray-200">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-xl font-semibold text-gray-900">Cập nhật sản phẩm</h1>
                <p class="mt-1 text-sm text-gray-600">Chỉnh sửa thông tin sản phẩm</p>
            </div>
            <a class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-emerald-500 transition-colors duration-200" 
               asp-area="Admin" asp-controller="Product" asp-action="Index">
                <i class="fas fa-arrow-left mr-2"></i>
                Quay về danh sách
            </a>
        </div>
    </div>

    <!-- Modern form layout with grid -->
    <div class="px-6 py-6">
        <form asp-area="Admin" asp-controller="Product" asp-action="Update" method="post" enctype="multipart/form-data" class="space-y-6">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                <!-- Left Column -->
                <div class="space-y-6">
                    <div>
                        <label for="Name" class="flex items-center text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-tag text-gray-400 mr-2"></i>
                            Tên sản phẩm
                        </label>
                        <input type="text" asp-for="Name" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 transition-colors duration-200" 
                               id="Name" name="Name" required value="@Model.Name" placeholder="Nhập tên sản phẩm" />
                    </div>

                    <div>
                        <label for="Price" class="flex items-center text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-dollar-sign text-gray-400 mr-2"></i>
                            Giá
                        </label>
                        <input type="number" asp-for="Price" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 transition-colors duration-200" 
                               id="Price" name="Price" required value="@Model.Price" placeholder="Nhập giá sản phẩm" />
                    </div>

                    <div>
                        <label for="BrandId" class="flex items-center text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-copyright text-gray-400 mr-2"></i>
                            Thương hiệu
                        </label>
                        <select asp-for="BrandId" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 transition-colors duration-200" 
                                id="BrandId" name="BrandId">
                            <option value="">-- Chọn thương hiệu --</option>
                            @foreach (var brand in ViewBag.Brands)
                            {
                                if(brand.Id == Model.BrandId)
                                {
                                    <option value="@brand.Id" selected>@brand.Name</option>
                                }
                                else
                                {
                                    <option value="@brand.Id">@brand.Name</option>
                                }
                            }
                        </select>
                    </div>

                    <div>
                        <label for="CategoryId" class="flex items-center text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-folder text-gray-400 mr-2"></i>
                            Danh mục
                        </label>
                        <select asp-for="CategoryId" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 transition-colors duration-200" 
                                id="CategoryId" name="CategoryId">
                            <option value="">-- Chọn danh mục --</option>
                            @foreach (var cate in ViewBag.Categories)
                            {
                                if(cate.Id == Model.CategoryId)
                                {
                                    <option value="@cate.Id" selected>@cate.Name</option>
                                }
                                else
                                {
                                    <option value="@cate.Id">@cate.Name</option>
                                }   
                            }   
                        </select>
                    </div>
                </div>

                <!-- Right Column -->
                <div class="space-y-6">
                    <div>
                        <label for="Image" class="flex items-center text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-image text-gray-400 mr-2"></i>
                            Ảnh sản phẩm
                        </label>
                        <input type="file" asp-for="Image" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 transition-colors duration-200" 
                               id="Image" name="Image" accept="image/*" onchange="previewImage(event)" />
                        <div class="mt-3">
                            <img id="preview" src="@Model.Image" alt="Preview" class="max-w-full h-32 object-cover rounded-md border border-gray-200" style="@(string.IsNullOrEmpty(Model.Image) ? "display:none;" : "")" />
                        </div>
                    </div>

                    <div>
                        <label for="Slug" class="flex items-center text-sm font-medium text-gray-700 mb-2">
                            <i class="fas fa-link text-gray-400 mr-2"></i>
                            Slug
                        </label>
                        <input asp-for="Slug" type="text" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 transition-colors duration-200" 
                               id="Slug" name="Slug" value="@Model.Slug" placeholder="Nhập slug" />
                    </div>
                </div>
            </div>

            <!-- Full Width Description -->
            <div>
                <label for="Description" class="flex items-center text-sm font-medium text-gray-700 mb-2">
                    <i class="fas fa-align-left text-gray-400 mr-2"></i>
                    Mô tả
                </label>
                <textarea class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 transition-colors duration-200" 
                          asp-for="Description" id="Description" name="Description" rows="4" placeholder="Nhập mô tả sản phẩm">@Model.Description</textarea>
            </div>

            <!-- Updated button text and styling -->
            <div class="flex items-center justify-end space-x-3 pt-6 border-t border-gray-200">
                <a asp-area="Admin" asp-controller="Product" asp-action="Index" 
                   class="px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-emerald-500 transition-colors duration-200">
                    Hủy
                </a>
                <button type="submit" class="px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-emerald-600 hover:bg-emerald-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-emerald-500 transition-colors duration-200">
                    <i class="fas fa-save mr-2"></i>
                    Cập nhật sản phẩm
                </button>
            </div>
        </form>
    </div>
</div>

<script>
function previewImage(event) {
    var input = event.target;
    var reader = new FileReader();
    reader.onload = function(){
        var preview = document.getElementById('preview');
        preview.src = reader.result;
        preview.style.display = 'block';
    };
    if(input.files && input.files[0]){
        reader.readAsDataURL(input.files[0]);
    }
}
</script>
