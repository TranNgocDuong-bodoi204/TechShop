@model AccountModel
<div style="max-width:500px; margin:20px auto; padding:20px; border:1px solid #ddd; border-radius:8px; font-family:Arial, sans-serif; background-color:#f9fafb;">
    <h2 style="font-size:20px; font-weight:600; margin-bottom:15px; color:#111;">Cập nhật tài khoản</h2>

    <form method="post" asp-action="Update" asp-controller="Account" asp-area="admin" style="display:flex; flex-direction:column; gap:12px;">
        <!-- Username -->
        <input type="hidden" name="Id" value="@Model.Id" />
        <div style="display:flex; flex-direction:column;">
            <label for="Username" style="margin-bottom:4px; font-size:14px; font-weight:500; color:#333;">Tên tài khoản</label>
            <input type="text" id="Username" name="Username" value="@Model.Username" 
                   style="padding:8px; border:1px solid #ccc; border-radius:6px; font-size:14px;">
        </div>

        <!-- Email -->
        <div style="display:flex; flex-direction:column;">
            <label for="Email" style="margin-bottom:4px; font-size:14px; font-weight:500; color:#333;">Email</label>
            <input type="email" id="Email" name="Email" value="@Model.Email" 
                   style="padding:8px; border:1px solid #ccc; border-radius:6px; font-size:14px;">
        </div>

        <!-- Phone -->
        <div style="display:flex; flex-direction:column;">
            <label for="PhoneNumber" style="margin-bottom:4px; font-size:14px; font-weight:500; color:#333;">Số điện thoại</label>
            <input type="text" id="PhoneNumber" name="PhoneNumber" value="@Model.PhoneNumber" 
                   style="padding:8px; border:1px solid #ccc; border-radius:6px; font-size:14px;">
        </div>

        <!-- Address -->
        <div style="display:flex; flex-direction:column;">
            <label for="Address" style="margin-bottom:4px; font-size:14px; font-weight:500; color:#333;">Địa chỉ</label>
            <input type="text" id="Address" name="Address" value="@Model.Address" 
                   style="padding:8px; border:1px solid #ccc; border-radius:6px; font-size:14px;">
        </div>

        <!-- Role -->
        <div style="display:flex; flex-direction:column;">
            <label for="Role" style="margin-bottom:4px; font-size:14px; font-weight:500; color:#333;">Vai trò</label>
            <select id="Role" name="Role" 
                    style="padding:8px; border:1px solid #ccc; border-radius:6px; font-size:14px; cursor:pointer;">
                @{
                    if(Model.Role == "admin")
                    {
                        <option selected value="admin">Admin</option>
                        <option value="user">User</option>
                    }
                    else{
                        <option value="admin">Admin</option>
                        <option selected value="user">User</option>
                    }
                }
            </select>
        </div>

        <!-- Buttons -->
        <div style="display:flex; justify-content:flex-end; gap:10px; margin-top:15px;">
            <button type="submit" 
                    style="padding:8px 16px; background-color:#3b82f6; color:white; border:none; border-radius:6px; font-size:14px; font-weight:500; cursor:pointer;"
                    onmouseover="this.style.backgroundColor='#2563eb';" onmouseout="this.style.backgroundColor='#3b82f6';">
                Lưu thay đổi
            </button>
            <a asp-action="Index" asp-controller="Account" asp-area="admin"
            style="display:inline-block; padding:8px 16px; background-color:#6b7280; color:white; border-radius:6px; font-size:14px; font-weight:500; text-decoration:none; cursor:pointer;"
            onmouseover="this.style.backgroundColor='#4b5563';" 
            onmouseout="this.style.backgroundColor='#6b7280';">
            Hủy
            </a>
        </div>
    </form>
</div>
