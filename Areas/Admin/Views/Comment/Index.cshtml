@model IEnumerable<TechnicalShop.Models.CommentModel>
<div class="container">
    <h2 class="page-title">Quản lý bình luận</h2>

    <table class="comment-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Người dùng</th>
                <th>Nội dung</th>
                <th>Ngày tạo</th>
                <th>Trạng thái</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            <!-- Vòng lặp hiển thị bình luận -->
            @foreach (var comment in Model)
            {
            <tr>
                <td>1</td>
                <td>@comment.userComment</td>
                <td>@comment.Content</td>
                <td>@comment.CreatedAt</td>

                    <td>
                    @Html.Raw(comment.status == 0 
                    ? "<span class='badge badge-pending'>Chưa duyệt</span>" 
                    : "<span class='badge badge-success'>Đã duyệt</span>")
                    </td>

                <td>
                    <a asp-action="approve" asp-controller="Comment" asp-route-id="@comment.Id">
                    <button class="btn btn-approve">Duyệt</button> </a>
                    <a asp-action="delete" asp-controller="Comment" asp-route-id="@comment.Id" asp-route-id="@comment.Id">
                    <button  class="btn btn-delete">Xóa</button> </a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .container {
        max-width: 1100px;
        margin: 40px auto;
        padding: 20px;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.08);
    }

    .page-title {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 20px;
        color: #333;
    }

    .comment-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 15px;
    }

    .comment-table th, 
    .comment-table td {
        padding: 12px 15px;
        border-bottom: 1px solid #eee;
        text-align: left;
    }

    .comment-table th {
        background: #f5f5f5;
        font-weight: bold;
    }

    .badge {
        padding: 4px 10px;
        border-radius: 8px;
        font-size: 13px;
        font-weight: 600;
    }

    .badge-approved {
        background: #d4edda;
        color: #155724;
    }

    .badge-pending {
        background: #fff3cd;
        color: #856404;
    }

    .btn {
        padding: 6px 12px;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        font-size: 14px;
        margin-right: 6px;
        transition: all 0.2s;
    }

    .btn-approve {
        background: #007bff;
        color: white;
    }

    .btn-approve:hover {
        background: #0056b3;
    }

    .btn-delete {
        background: #dc3545;
        color: white;
    }

    .btn-delete:hover {
        background: #a71d2a;
    }
</style>
