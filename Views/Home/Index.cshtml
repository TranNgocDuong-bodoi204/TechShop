@using TechnicalShop.Models.DTO
@model HomeViewDTO
<section id="slider" class="mb-5" style="margin-top: 60px;">
    <div class="swiper mySwiper">
        <div class="swiper-wrapper">
            <div class="swiper-slide">
                <img src="~/images/Banner/a1.png" alt="Banner 1" class="banner-img">
            </div>
            <div class="swiper-slide">
                <img src="~/images/Banner/banner2.jpg" alt="Banner 2" class="banner-img">
            </div>
            <div class="swiper-slide">
                <img src="~/images/Banner/banner3.jpg" alt="Banner 3" class="banner-img">
            </div>
            <div class="swiper-slide">
                <img src="~/images/Banner/banner4.jpg" alt="Banner 4" class="banner-img">
            </div>
        </div>

        <!-- Nút điều hướng -->
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
        <!-- Thanh pagination -->
        <div class="swiper-pagination"></div>
    </div>
</section>

<form asp-action="Filter" method="get" asp-controller="Search" style="width:100%;">
    <div style="font-family: Arial, sans-serif; width: 100%; padding: 15px; background-color: #f9f9f9; border-bottom: 1px solid #e0e0e0; display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 10px;">
        <h3 style="margin: 0 15px 0 0; font-size: 18px; color: #333; white-space: nowrap;">Bộ lọc sản phẩm</h3>

        <!-- Lọc theo danh mục -->
        <div>
            <select name="CategoryId" style="padding: 8px; border: 1px solid #ccc; border-radius: 4px; font-size: 14px; min-width: 150px;">
                <option value="">Tất cả danh mục</option>
                @foreach (var cat in Model.Categories)
                {
                    <option value="@cat.Id">@cat.Name</option>
                }
            </select>
        </div>

        <!-- Lọc theo thương hiệu -->
        <div>
            <select name="BrandId" style="padding: 8px; border: 1px solid #ccc; border-radius: 4px; font-size: 14px; min-width: 150px;">
                <option value="">Tất cả thương hiệu</option>
                @foreach (var brand in Model.Brands)
                {
                    <option value="@brand.Id">@brand.Name</option>
                }
            </select>
        </div>

        <!-- Lọc theo giá -->
        <div style="display: flex; gap: 5px;">
            <input type="number" name="MinPrice" placeholder="Từ" style="padding: 8px; border: 1px solid #ccc; border-radius: 4px; font-size: 14px; width: 80px;">
            <input type="number" name="MaxPrice" placeholder="Đến" style="padding: 8px; border: 1px solid #ccc; border-radius: 4px; font-size: 14px; width: 80px;">
        </div>

        <!-- Lọc theo tình trạng -->
        <div style="display: flex; gap: 10px; align-items: center;">
            <label style="font-size: 14px; white-space: nowrap;">
                <input type="radio" name="Status" value="in-stock" style="margin-right: 4px;"> Còn hàng
            </label>
            <label style="font-size: 14px; white-space: nowrap;">
                <input type="radio" name="Status" value="out-of-stock" style="margin-right: 4px;"> Hết hàng
            </label>
        </div>

        <!-- Nút áp dụng -->
        <button type="submit" style="padding: 8px 15px; background-color: #007bff; color: white; border: none; border-radius: 4px; font-size: 14px; cursor: pointer; transition: background-color 0.3s; white-space: nowrap;">
            Áp dụng bộ lọc
        </button>
    </div>
</form>


