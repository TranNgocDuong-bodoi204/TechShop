@using TechnicalShop.Models
@model Dictionary<BrandModel, List<ProductModel>>

@foreach (var block in Model)
{
    if(block.Key.Status == 1)
    {
        string brandName = block.Key.Name;
    var products = block.Value;

    <section class="mb-5">
        <div class="brand-title text-center mb-4">
            <h3 class="fw-bold">@brandName</h3>
            <hr class="mx-auto" style="width: 120px; border-top: 3px solid #0d6efd;" />
        </div>
        <div class="row g-4">
            @foreach (var product in products)
            {
                <div class="col-md-4 col-sm-6">
                    <div class="card h-100 shadow-sm border-0 rounded-3 product-card">
                        <a asp-action="Index" asp-controller="Detail" asp-route-id="@product.Id" class="text-decoration-none text-dark">
                            <div class="product-img-wrapper">
                                <img src="~/images/@product.Image" alt="@product.Name" class="product-img" />
                            </div>
                        </a>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-truncate">@product.Name</h5>
                            <p class="card-text mb-1 text-muted">
                                <small>Thương hiệu: @product.Brand?.Name</small><br />
                                <small>Danh mục: @product.Category?.Name</small>
                            </p>
                            <h6 class="fw-bold text-danger mb-3">@String.Format("{0:N0} đ", product.Price)</h6>

                            <div class="mt-auto">
                                <a asp-action="Add" asp-controller="Cart" asp-route-id="@product.Id"
                                   class="btn btn-outline-primary w-100 mb-2">
                                    <i class="fa fa-shopping-cart me-2"></i>Thêm vào giỏ
                                </a>
                                <div class="d-flex justify-content-between">
                                    <a asp-action="Add" asp-controller="Wishlist" asp-area="default" asp-route-id="@product.Id"  class="btn btn-sm btn-light w-50 me-1">
                                        <i class="fa fa-heart me-1 text-danger"></i> Yêu thích
                                    </a>
                                    <a href="#" class="btn btn-sm btn-light w-50 ms-1">
                                        <i class="fa fa-exchange me-1"></i> So sánh
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
    }
    
}

    


<style>
    .product-img-wrapper {
        height: 250px; /* khung ảnh cố định */
        display: flex;
        align-items: center;
        justify-content: center;
        background: #f8f9fa; /* nền xám nhạt */
        border-bottom: 1px solid #eee;
    }

    .product-img {
        max-height: 100%;
        max-width: 100%;
        object-fit: contain; /* hiển thị đầy đủ ảnh */
    }

    .product-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 6px 16px rgba(0,0,0,0.1);
    }
    .brand-title h3 {
    font-size: 1.75rem;
    color: #0d6efd;
    text-transform: uppercase;
    letter-spacing: 1px;
}
</style>



        
