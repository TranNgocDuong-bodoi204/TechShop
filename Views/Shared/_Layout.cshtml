<body>

	<header style="background:#fff; box-shadow:0 2px 15px rgba(0,0,0,0.08); position:sticky; top:0; z-index:1000;">
    <!-- Top Bar -->
    <div style="background:linear-gradient(135deg,#667eea 0%,#764ba2 100%); color:#fff; padding:4px 0; font-size:13px;">
        <div style="max-width:1200px; margin:0 auto; padding:0 16px; display:flex; justify-content:space-between; align-items:center;">
            <div style="display:flex; gap:16px;">
                <a href="#" style="color:white; text-decoration:none; display:flex; align-items:center; gap:4px; transition:opacity .3s;">
                    📞 +2 95 01 88 821
                </a>
                <a href="#" style="color:white; text-decoration:none; display:flex; align-items:center; gap:4px; transition:opacity .3s;">
                    ✉️ info@domain.com
                </a>
            </div>
            <div style="display:flex; gap:8px;">
                <a href="#" style="width:24px; height:24px; display:flex; align-items:center; justify-content:center; border-radius:50%; background:rgba(255,255,255,0.2); font-size:12px;">📘</a>
                <a href="#" style="width:24px; height:24px; display:flex; align-items:center; justify-content:center; border-radius:50%; background:rgba(255,255,255,0.2); font-size:12px;">🐦</a>
                <a href="#" style="width:24px; height:24px; display:flex; align-items:center; justify-content:center; border-radius:50%; background:rgba(255,255,255,0.2); font-size:12px;">💼</a>
                <a href="#" style="width:24px; height:24px; display:flex; align-items:center; justify-content:center; border-radius:50%; background:rgba(255,255,255,0.2); font-size:12px;">🎨</a>
            </div>
        </div>
    </div>

    <!-- Main Header -->
    <div style="padding:8px 0; background:white;">
        <div style="max-width:1200px; margin:0 auto; padding:0 16px; display:flex; justify-content:space-between; align-items:center;">
            <!-- Logo -->
            <a asp-action="Index" asp-controller="Home"asp-controller="Home" asp-area="Default" style="display:flex; align-items:center; gap:8px; text-decoration:none;">
                <div style="width:36px; height:36px; background:linear-gradient(135deg,#667eea 0%,#764ba2 100%); border-radius:8px; display:flex; align-items:center; justify-content:center; color:white; font-weight:bold; font-size:16px;">L</div>
                <span style="font-size:18px; font-weight:700; color:#2d3748;">LOGO</span>
            </a>

            <!-- User Menu -->
            <div style="display:flex; align-items:center; gap:6px; font-size:13px;">

                @{
                    string? ss = Context.Session.GetString("user");
                }

                @if (!string.IsNullOrEmpty(ss))
                {
                    <a asp-action="AccountInfo" asp-controller="Account" asp-area="Default"
                    style="color:#4a5568; padding:6px 10px; border-radius:6px; text-decoration:none; display:flex; align-items:center; gap:6px;">
                    👤 Account
                    </a>
                }
                else
                {
    <a asp-action="Index" asp-controller="Account" asp-area="Default"
       style="color:#4a5568; padding:6px 10px; border-radius:6px; text-decoration:none; display:flex; align-items:center; gap:6px;">
       👤 Account
    </a>
}


                <a href="#" style="color:#4a5568; padding:6px 10px; border-radius:6px; text-decoration:none; display:flex; align-items:center; gap:6px;">❤️ Wishlist</a>
                <a href="checkout.html" style="color:#4a5568; padding:6px 10px; border-radius:6px; text-decoration:none; display:flex; align-items:center; gap:6px;">✅ Checkout</a>
                <a asp-action="Index" asp-controller="Cart" asp-area="Default" style="color:white; padding:6px 12px; border-radius:6px; display:flex; align-items:center; gap:6px; background:linear-gradient(135deg,#667eea 0%,#764ba2 100%); text-decoration:none; position:relative;">
                    🛒 Cart <span style="background:rgba(255,255,255,0.3); width:18px; height:18px; border-radius:50%; display:flex; align-items:center; justify-content:center; font-size:11px; font-weight:bold;">
                        @{
                            string? jsonString = Context.Session.GetString("Cart");

                            if(jsonString ==null)
                            {
                                <span>0</span>
                            }
                            else{
                                var list = JsonSerializer.Deserialize<List<CartItemModel>>(jsonString);
                                int count = 0;
                                foreach(var item in list)
                                {
                                    count += item.Quantity;
                                }

                                <span>@count</span>
                            }
                        }
                    </span>
                </a>

                <!-- User Authentication -->
                <div style="margin-left:12px; padding-left:12px; border-left:1px solid #e2e8f0;">
                    @{
                        var user = Context.Session.GetString("user");
                        if(user == null)
                        {
                            <a asp-action="Index" asp-controller="Account" asp-area="Default" style="color:#4a5568; padding:6px 10px; border-radius:6px; text-decoration:none; display:flex; align-items:center; gap:6px;">🔐 Đăng nhập</a>
                        }
                        else{
                            var userObj = JsonSerializer.Deserialize<AccountModel>(user);
                            if(userObj.Role == "admin"){
                                <a asp-action="Index" asp-controller="AdminHome" asp-area="Admin" style="color:#667eea; padding:6px 10px; border-radius:6px; text-decoration:none; display:flex; align-items:center; gap:6px;">👑 Xin chào admin: @userObj.Username</a>
                            } else {
                                <a asp-action="Index" asp-controller="Home" asp-area="Default" style="color:#667eea; padding:6px 10px; border-radius:6px; text-decoration:none; display:flex; align-items:center; gap:6px;">👋 Xin chào: @userObj.Username</a>
                            }
                        }
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Navigation & Search -->
    <div style="background:#f8fafc; border-top:1px solid #e2e8f0;">
        <div style="max-width:1200px; margin:0 auto; padding:0 16px; display:flex; justify-content:space-between; align-items:center; min-height:48px;">
            <!-- Navigation -->
            <nav style="display:flex; align-items:center; font-size:14px;">
                <a asp-action="Index" asp-controller="Home" asp-area="Default" style="color:#667eea; padding:10px 16px; font-weight:600; border-bottom:2px solid #667eea; text-decoration:none;">Home</a>
                <a href="#" style="color:#4a5568; padding:10px 16px; text-decoration:none;">Về chúng tôi</a>
                <a href="#" style="color:#4a5568; padding:10px 16px; text-decoration:none;">Liên hệ</a>
            </nav>

            <!-- Search -->
            <div style="position:relative;">
            <form asp-action="Index" asp-controller="Search" method="get">
                <input type="text" name="keyword" placeholder="Tìm kiếm..." 
                    style="padding:8px 36px 8px 12px; border:1px solid #e2e8f0; border-radius:20px; width:220px; font-size:13px;">
                <button type="submit" 
                        style="position:absolute; right:6px; top:50%; transform:translateY(-50%); background:linear-gradient(135deg,#667eea 0%,#764ba2 100%); border:none; border-radius:50%; width:28px; height:28px; display:flex; align-items:center; justify-content:center; cursor:pointer; font-size:14px; color:#fff;">
                    🔍
                </button>
            </form>
            </div>
        </div>
    </div>
</header>

        @Html.Partial("_NotificationPartial")

