@{
    ViewData["Title"] = "Yêu cầu đăng nhập";
}

<div class="login-required-container">
    <div class="login-box">
        <img src="~/images/requireLogin.png" alt="Login Required" class="login-image">
        <h2>Bạn cần đăng nhập để vào trang này</h2>
        <p>Vui lòng đăng nhập</p>
        <a asp-action="Index" asp-controller="Account" class="btn-login">Đi đến Đăng nhập</a>
    </div>
</div>

<style>
    .login-required-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 80vh;
        background: linear-gradient(135deg, #f0f4f8, #e0e7ff);
    }

    .login-box {
        text-align: center;
        background: white;
        padding: 40px;
        border-radius: 16px;
        box-shadow: 0 6px 20px rgba(0,0,0,0.1);
        max-width: 400px;
        width: 100%;
        animation: fadeIn 0.6s ease-in-out;
    }

    .login-box h2 {
        margin: 20px 0 10px;
        font-size: 22px;
        color: #333;
    }

    .login-box p {
        color: #666;
        font-size: 15px;
        margin-bottom: 20px;
    }

    .login-image {
        width: 120px;
        margin-bottom: 20px;
    }

    .btn-login {
        display: inline-block;
        padding: 12px 24px;
        background: #4f46e5;
        color: white;
        font-size: 16px;
        border-radius: 8px;
        text-decoration: none;
        transition: background 0.3s;
    }

    .btn-login:hover {
        background: #4338ca;
    }
</style>
