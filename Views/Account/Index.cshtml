@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng nhập & Đăng ký</title>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        /* Updated CSS to match design brief with emerald color scheme and DM Sans font */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'DM Sans', sans-serif;
            background: #f1f5f9;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            color: #475569;
        }

        .container {
            background: #ffffff;
            border-radius: 0.5rem;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            width: 100%;
            max-width: 800px;
            display: flex;
            min-height: 600px;
        }

        .form-section {
            flex: 1;
            padding: 40px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .login-section {
            background: #ffffff;
            border-right: 1px solid #e2e8f0;
        }

        .register-section {
            background: #f1f5f9;
        }

        .form-header {
            text-align: center;
            margin-bottom: 30px;
        }

        .form-header h2 {
            color: #059669;
            font-size: 28px;
            font-weight: 700;
            margin-bottom: 10px;
        }

        .form-header p {
            color: #475569;
            font-size: 14px;
            font-weight: 400;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            color: #475569;
            font-weight: 500;
            font-size: 14px;
        }

        .form-group input {
            width: 100%;
            padding: 12px 16px;
            border: 1px solid #e2e8f0;
            border-radius: 0.5rem;
            font-size: 16px;
            font-family: 'DM Sans', sans-serif;
            transition: all 0.3s ease;
            background-color: #ffffff;
        }

        .form-group input:focus {
            outline: none;
            border-color: #059669;
            box-shadow: 0 0 0 3px rgba(5, 150, 105, 0.1);
        }

        .form-group input::placeholder {
            color: #94a3b8;
        }

        .btn {
            width: 100%;
            padding: 14px;
            background: #059669;
            color: #ffffff;
            border: none;
            border-radius: 0.5rem;
            font-size: 16px;
            font-weight: 600;
            font-family: 'DM Sans', sans-serif;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-top: 10px;
        }

        .btn:hover {
            background: #047857;
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(5, 150, 105, 0.3);
        }

        .btn-secondary {
            background: #10b981;
        }

        .btn-secondary:hover {
            background: #059669;
        }

        .form-footer {
            text-align: center;
            margin-top: 25px;
            padding-top: 25px;
            border-top: 1px solid #e2e8f0;
        }

        .form-footer p {
            color: #475569;
            font-size: 14px;
        }

        .form-footer a {
            color: #059669;
            text-decoration: none;
            font-weight: 600;
        }

        .form-footer a:hover {
            text-decoration: underline;
        }

        .row {
            display: flex;
            gap: 15px;
        }

        .row .form-group {
            flex: 1;
        }


        .divider {
            text-align: center;
            margin: 20px 0;
            position: relative;
            color: #94a3b8;
            font-size: 14px;
        }

        .divider::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 0;
            right: 0;
            height: 1px;
            background: #e2e8f0;
            z-index: 1;
        }

        .divider span {
            background: #ffffff;
            padding: 0 15px;
            position: relative;
            z-index: 2;
        }

        .register-section .divider span {
            background: #f1f5f9;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Form Đăng nhập -->
        <div class="form-section login-section">
            <div class="form-header">
                <h2>Đăng nhập</h2>
                <p>Chào mừng bạn trở lại!</p>
                @Html.Partial("_NotificationPartial")
            </div>

            <form asp-action="Index" asp-controller="Account">
                <div class="form-group">
                    <label for="loginEmail">Email/Username</label>
                    <input type="text" id="loginEmail" name="textLogin" placeholder="Nhập email của bạn" required>
                </div>

                <div class="form-group">
                    <label for="loginPassword">Mật khẩu</label>
                    <input type="password" id="loginPassword" name="password" placeholder="Nhập mật khẩu" required>
                </div>

                <button type="submit" class="btn">Đăng nhập</button>
            </form>

            <div class="form-footer">
                <p>Chưa có tài khoản? <a asp-action="Register" asp-controller="Account">Đăng ký ngay</a></p>
                <a asp-action="Index" asp-controller="Home">
                 <button type="button" class="btn btn-secondary" asp-action="Index" asp-controller="Home" ">Quay về trang chủ</button></a>
            </div>
        </div>

        <!-- Form Đăng ký -->
    </div>
</body>
</html>
<!DOCTYPE html>