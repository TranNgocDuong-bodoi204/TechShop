@using System.Text.Json
@model TechnicalShop.Models.DetailModel

@{
    string? json = Context.Session.GetString("user");
    int userId = 0;
    if (json != null)
    {
        var acc = JsonSerializer.Deserialize<TechnicalShop.Models.AccountModel>(json);
        if (acc != null)
        {
            userId = acc.Id;
        }
    }
}

<div class="container py-5">
    <div class="row">
        <!-- Hình ảnh sản phẩm -->
        <div class="col-lg-5 mb-4">
            <div class="card shadow-sm border-0">
                <div class="p-3 text-center">
                    <img src="~/images/@Model.Products.Image"
                         alt="@Model.Products.Name"
                         class="img-fluid rounded"
                         style="max-height:400px; object-fit:contain;" />
                </div>
            </div>
        </div>

        <!-- Thông tin sản phẩm -->
        <div class="col-lg-7">
            <h2 class="fw-bold">@Model.Products.Name</h2>
            <h4 class="text-danger fw-bold my-3">@String.Format("{0:N0} VNĐ", Model.Products.Price)</h4>

            <ul class="list-unstyled mb-4">
                <li><b>Trạng thái:</b> <span class="text-success">✔ Còn hàng</span></li>
                <li><b>Thương hiệu:</b> @Model.Products.Brand?.Name</li>
                <li><b>Danh mục:</b> @Model.Products.Category?.Name</li>
            </ul>

            <!-- Nút hành động -->
            <div class="d-flex flex-wrap gap-3 mb-4">
                <form asp-action="AddToCart" asp-controller="Cart" method="post">
                    <input type="hidden" name="id" value="@Model.Products.Id" />
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="fa fa-shopping-cart me-2"></i>Thêm vào giỏ
                    </button>
                </form>

                <form asp-action="AddToWishlist" asp-controller="Wishlist" method="post">
                    <input type="hidden" name="id" value="@Model.Products.Id" />
                    <button type="submit" class="btn btn-outline-danger px-4">
                        <i class="fa fa-heart me-2"></i>Yêu thích
                    </button>
                </form>
            </div>

            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="fw-bold mb-3">Mô tả sản phẩm</h5>
                    <p class="text-muted">@Model.Products.Description</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Đánh giá sản phẩm -->
    <div class="mt-5">
        <h4 class="fw-bold mb-4">Đánh giá sản phẩm</h4>
        <h4>Tổng số lượng bình luận: @Model.Comments.Count</h4>
        <!-- Danh sách đánh giá -->
        <div class="mb-4">

            @if (Model.Comments != null && Model.Comments.Count != 0 )
{
    @foreach (var comment in Model.Comments)
    {
        if(comment.status == 1)
        {
            if(comment.AccountId == userId)
            {
                <div class="card mb-3 shadow-sm border-0">
                <div class="card-body">
                    <h3>@comment.userComment</h3>
                    <h6 class="fw-bold">
                        <small class="text-muted">@comment.CreatedAt.ToString("dd/MM/yyyy")</small>
                    </h6>
                    <p class="mb-0">@comment.Content</p>
                </div>
                <a asp-action="delete" asp-controller="Detail" asp-route-id="@comment.Id" >Xóa bình luận</a>
                </div>
            }
            else{
                <div class="card mb-3 shadow-sm border-0">
                <div class="card-body">
                    <h3>@comment.userComment</h3>
                    <h6 class="fw-bold">
                        <small class="text-muted">@comment.CreatedAt.ToString("dd/MM/yyyy")</small>
                    </h6>
                    <p class="mb-0">@comment.Content</p>
                </div>
                </div>
            }
        
        }
    }
}
else
{
    <p class="text-muted">Chưa có đánh giá nào cho sản phẩm này.</p>
}

        </div>
<div class="mt-4">
    @* Chỉ hiển thị khi người dùng đã đăng nhập *@
    @if (Context.Session.GetString("user") != null)
    {
        <h5>Viết đánh giá của bạn</h5>
        <form asp-action="addComment" asp-controller="Detail"  method="post">
            
            <div class="mb-3">
                <label for="rating">Đánh giá (1-5 sao)</label>
                <select  class="form-select" name="Rating" required>
                    <option value="5">★★★★★ - Rất tốt</option>
                    <option value="4">★★★★☆ - Tốt</option>
                    <option value="3">★★★☆☆ - Bình thường</option>
                    <option value="2">★★☆☆☆ - Tệ</option>
                    <option value="1">★☆☆☆☆ - Rất tệ</option>
                </select>
            </div>

             <input name="ProductId"  type="hidden" value="@Model.Products.Id" />
             
             <input name="AccountId"  type="hidden" value="@userId"/>

            <div class="mb-3">
                <label for="Content">Bình luận</label>
                <textarea  class="form-control" name="Content" rows="3" required></textarea>
            </div>

            <button type="submit" class="btn btn-primary">Gửi đánh giá</button>
        </form>
    }
    else
    {
        <p>Bạn cần <a asp-controller="Account" asp-action="Login">đăng nhập</a> để bình luận.</p>
    }
</div>
    </div>
</div>
